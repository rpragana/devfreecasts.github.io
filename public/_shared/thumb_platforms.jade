- var sorted_platforms = platforms.sort();
- var total_videos = sorted_platforms.reduce(function(total, platform) {
-     return total + public[platform]._data.index.videos.length;
- }, 0);
section.row-fluid.clearfix
  form.center(action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_top")
    img(border="0" src="https://www.paypalobjects.com/pt_BR/i/scr/pixel.gif" width="1" height="1")
    input(type="hidden" name="cmd" value="_s-xclick")
    input(type="hidden" name="hosted_button_id" value="Q3UNFCDD9XL2Y")
    <a class="btn btn-lg btn-primary" href="#{github_url}/blob/dev/README.md#how-to-add-screencasts" target="_blank" title="Just click and follow these rules to submit a video."><i class="icon-plus"></i>&nbsp;Submit video</a>&nbsp;&nbsp;
    <button class="btn btn-lg btn-info" type="submit" name="submit" style="text-decoration:none"><i class="icon-thumbs-up" title="Support our project doing a humble donation for us!"></i>&nbsp;Donate</button>
  p.center
    <strong>#{total_videos}</strong> videos and <strong>#{platforms.length}</strong> categories
section.row-fluid.clearfix
  .row-fluid
    each platform in sorted_platforms
      - var platform_data = public[platform]._data.index
      .col-xs-12.col-sm-4.col-md-3
        .thumbnail
          a(href="#{root_url[environment]}#{platform_data.name}" title="#{platform_data.about}")
            img.img-responsive.img-rounded(src="#{root_url[environment]}assets/images/#{platform_data.image}" alt="#{platform_data.about}")
          .caption
            p.center
              a.btn.btn-block.btn-primary(href="#{root_url[environment]}#{platform_data.name}" title="#{platform_data.about}")<i class="icon-video"></i>&nbsp;#{platform_data.subtitle} (#{platform_data.videos.length} videos)
